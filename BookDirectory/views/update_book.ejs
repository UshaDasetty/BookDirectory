<!-- Main Site-->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i> All Books</a>
            </div>
        </div>

        <div class="form-title text-center">
            <h2 class="text-dark">Update Book Details</h2>
            <span class="text-light">Use the below form to update an details</span>
        </div>

        <!-- add book form -->
        <!-- form handling-->

<form method="POST" id="update_book">
    <div class="new_book">

        <div class="form-group">
            <label for="bookname" class="text-light">BookName</label>
            <input type="hidden" name="id" value="<%= BookObj._id%>">
            <input type="text" name="bookname" value="<%= BookObj.bookname%>" placeholder="BOOK">
        </div>

        <div class="form-group">
            <label for="author" class="text-light">Author</label>
            <input type="text" name="author" value="<%= BookObj.author%>" placeholder="author name">
        </div>

        <div class="form-group">
            <label for="status" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id= "radio-4" name="status" value="Published" <%= BookObj.status == 'Published'?'checked':''%>>
                <label for="radio-4" class="radio-label">Published</label>
            </div>

            <div class="radio inline">
                <input type="radio" id= "radio-5" name="status" value="NotPublished" <%= BookObj.status == 'NotPublished'?'checked':''%>>
                <label for="radio-5" class="radio-label">NotPublished</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
        

    </div>
</main>
<!-- /Main Site-->

<!-- include footer -->
<%- include('include/_footer')%>
