<% for(var i=0; i<book.length; i++) { %>

<tr>
    <td><%=i+1 %></td>
    <td><%=book[i].bookname %></td>
    <td><%=book[i].author %></td>
    <td><%=book[i].status %></td>
    <td>
        <a href="/update-book?id=<%=book[i]._id %>" class="btn border-shadow update">
            <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
        </a>

        <a class="btn border-shadow delete" data-id=<%=book[i]._id %>>
            <span class="text-gradient"><i class="fas fa-times"></i></span>
        </a>
    </td>
</tr>
<% } %>