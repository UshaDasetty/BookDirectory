<!-- form handling-->

<form action="/api/books" method="POST" id="add_book">
    <div class="new_book">

        <div class="form-group">
            <label for="name" class="text-light">BookName</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="bookname" placeholder="BOOK">
        </div>

        <div class="form-group">
            <label for="email" class="text-light">Author</label>
            <input type="text" name="author" placeholder="author">
        </div>

        <div class="form-group">
            <label for="status" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id= "radio-4" name="status" value="Published">
                <label for="radio-4" class="radio-label">Published</label>
            </div>

            <div class="radio inline">
                <input type="radio" id= "radio-5" name="status" value="NotPublished">
                <label for="radio-5" class="radio-label">NotPublished</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>